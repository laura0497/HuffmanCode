<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dot_light_screen1"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_weight="0.15">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_cartera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="35dp"
            android:backgroundTintMode="multiply"
            android:elevation="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"
            tools:cardCornerRadius="3dp"
            tools:cardElevation="3dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_margin="20dp"
                android:gravity="top">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textToEvaluate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    android:focusable="true" />


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.85"
        android:gravity="bottom">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/evaluateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="evaluateText"
            android:background="@color/dark_green"
            android:text="@string/evaluate_text"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>